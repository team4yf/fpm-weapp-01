<!--index.wxml-->
<view class="container">

  <image style="width: 200px; height: 200px;" src="../../asset/image/logo-500.png"></image>

  <text style="font-size: 2em;">xxApp</text>
  <form>
    <i-panel title="欢迎使用">
      <i-input value="{{ login_name }}" title="账户" autofocus placeholder="输入用户名" />
      <i-input value="{{ login_pass }}" type="password" title="密码" placeholder="输入密码" />
    </i-panel>

    <view>
      <i-button bind:click="handleLogin" type="info">登录</i-button>
    </view>
  </form>
</view>
